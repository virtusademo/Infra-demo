{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"counter-app-web",
      "labels":{
         "app":"counter-app-web"
      }
   },
   "spec":{
      "replicas":2,
      "selector":{
         "app":"counter-app-web"
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"counter-app-web"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"master",
                  "image":"virtusademo/webapp:1.0",
                  "imagePullPolicy": "Always",
                  "ports":[
                     {
                        "name":"tomcat-port",
                        "containerPort":80
                     }
                  ],
                        "env": [
                          {
                                "name": "SERVICE_NAME",
                                "value": "counter-app-web"
                          }
                        ]

               }
            ]
       }
      }
   }
}
